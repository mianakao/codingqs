<!DOCTYPE html>
<html>
<head>
	<title>Coding Qs</title>

	<%= stylesheet_link_tag    "application", :media => "all" %>

	
	<%= javascript_include_tag "application" %>

	<%= csrf_meta_tags %>
	
	<!--
	<script type="text/javascript">
		$(document).ready(function(){
			$('.btn').popover(options)
		});
	</script>-->
</head>

<body>
	<div id="wrapper">
		<div class="navbar navbar-fixed-top">
		  <div class="navbar-inner">
			<div class="container">
			  <a href="/" class="brand"><span>Coding Qs</span></a>
			  <div class="nav-collapse">
				<ul class="nav">
				  <li id="questions"><a href="/">Questions</a></li>
				  <li id="users"><a href="/users">Users</a></li>
				  <li id="categories"><a href="/categories">Categories</a></li>
				  <li id="languages"><a href="/languages">Languages</a></li>
				</ul>
			  </div><!-- /.nav-collapse -->
			</div><!-- /.container -->
		  </div><!-- /.navbar-inner -->
		</div><!-- /.navbar -->

		<div class="container">

			<% if user_signed_in? %>  
				<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
			<% end %>
			<% if alert %>
				<div class="alert alert-error"><%= alert %></div>
			<% end %>
			<% if notice %>
				<div class="notice notice-error"><%= notice %></div>
			<% end %>		

			<%= yield %>
		</div>

		<footer>
			<hr />
				<p>&copy; Coding Qs 2012</p>
				<p>CIS196 Project by <a href="http://mikepatt.org">Mike Patterson</a></p>
		</footer>
		
	</div> <!--  closes wrapper div -->
</body>
</html>
