<h1>Listing questions</h1>

<table class="table table-condensed table-striped table-hover">
  <tr>
    <th class="span1">Votes</th>
    <th class="span1">Category</th>
    <th class="span5">Question</th>
    <th class="span1">Difficulty</th>
    <th class="span1">Language</th>
    <th class="span1"></th>
    <th class="span1"></th>
    <th class="span1"></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td class="span1"><%= question.votes %></td>
    <td class="span1"><%= question.category_name %></td>
    <td class="span5"><%= question.qtext %></td>
    <td class="span1"><%= question.difficulty %></td>
    <td class="span1"><%= question.language_name %></td>
    <td class="span1"><%= link_to 'Show', question %></td>
    <td class="span1"><%= link_to 'Edit', edit_question_path(question) %></td>
    <td class="span1"><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

